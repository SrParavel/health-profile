---
// Feature.astro
import type React from 'react'

interface Props {
  title?: string
  icon?: React.ElementType
}

const { title, icon: Icon } = Astro.props
---

<article class="bg-white p-8 shadow-sm rounded-lg h-full flex flex-col gap-2">
    <div class="flex gap-2 items-center">
        <!-- {Icon && <Icon size={24} />} -->
        <h3 class="text-2xl font-semibold">{title}</h3>
    </div>
    <span class="text-gray-600">
        <slot />
    </span>
</article>
